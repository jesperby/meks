- title "Rapporter"
%section.box.show.reports
  %h1.box-title= h1
  .box-content.basic.form-data

    = form_tag reports_placements_path, class: "basic" do
      %h2.group-title Placeringar
      .form-group
        %span.control-label
          %label{for: 'placements_from'} Fr√•n och med:
        .controls
          .input-group.date.from
            = text_field_tag 'placements[from]', DateTime.now.to_date - 2.weeks, class: 'form-control'
            %span.input-group-addon
              %span.m-icon-calendar

      .form-group
        %span.control-label
          %label{for: 'placements_to'} Till och med:
        .controls
          .input-group.date.to
            = text_field_tag 'placements[to]', DateTime.now.to_date, class: 'form-control'
            %span.input-group-addon
              %span.m-icon-calendar

    .form-group
      %ul
        %li= link_to 'Alla placeringar', reports_placements_path
        %li= link_to 'Alla ensamkommande barn', reports_refugees_path
        %li= link_to 'Alla boenden', nope_path
