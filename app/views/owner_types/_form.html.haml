.box-content
  = simple_form_for @owner_type , html: { class: "basic" } do |f|
    = f.error_notification class: "warning"

    = f.input :name

    .form-group
      %span.no-control-label
      .controls
        = f.submit t('actions.save'), class: "btn btn-primary"
        = link_to t('actions.cancel'), owner_types_path(@owner_type.name), class: "btn btn-default"
