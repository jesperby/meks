= s.input :fee, required: false, label: 'Dygnskostnad', wrapper: :addon do
  = s.input_field :_destroy, as: :hidden
  .input-group.daily_fee.date
    = s.input_field :fee, as: :numeric, class: "form-control fee", placeholder: 'kronor'
    .input-group-addon= 'kr, gäller från:'
    = s.input_field :start_date, as: :string, class: "form-control date", placeholder: 'startdatum'

    %span.input-group-btn
      %button.btn.btn-default.remove{ type: :button }
        %span.m-icon-close-0
