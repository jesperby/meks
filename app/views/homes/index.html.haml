- title "Boenden"
%section.box.index
  %h1.box-title= h1
  %table.full.wrap
    - if can? :manage, Refugee
      %thead
        %tr
          %td{ colspan: 9 }
            .actions= link_to t('actions.new'), new_home_path, class: "btn btn-primary"
      %tr
        %th Namn
        %th Boendeform
        %th Målgrupp
        %th Ägarform
        %th Platser
        %th Garantiplatser
        %th Lediga platser
        %th Placeringar

    %tbody
      - @homes.each do |home|
        %tr
          %td= link_to home.name, home
          %td= home.type_of_housings.map(&:name).join(', ')
          %td= home.target_groups.map(&:name).join(', ')
          %td= home.owner_type.present? ? home.owner_type.name : ''
          %td= home.seats
          %td= home.guaranteed_seats
          %td= home.seats - home.current_placements.count
          %td= home.current_placements.count

      - if can? :manage, Refugee
        %tr
          %td{ colspan: 9 }
            .actions= link_to t('actions.new'), new_home_path, class: "btn btn-primary"
