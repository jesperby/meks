- cache "view-#{@cache_key_for_status}" do
  - title 'Översikt'
  %section.box.show.statistics
    %h1.box-title= h1
    .box-content.basic
      - @stats[:periods].each do |period|
        %h2.group-title= period[:title]
        %p
          = "#{period[:data][:refugees]} barn"
          = "(#{period[:data][:per_gender]})"
        %p= "#{period[:data][:deregistered]} är avregistrerade"
        %p= "#{period[:data][:with_residence_permit]} har permantent uppehållstillstånd"
        %p= "#{period[:data][:with_temporary_permit]} har tillfälligt uppehållstillstånd"
        %p= "#{period[:data][:with_municipality_placement]} har anvisning"
        %p= "#{period[:data][:with_placement]} har boendeplats"
        %p
          = "Vanligast härkomst:"
          - period[:data][:top_countries][0...10].each do |lang|
            = "#{lang[0]} (#{lang[1]}),"
        %p
          = "Vanligast språk:"
          - period[:data][:top_languages][0...10].each do |lang|
            = "#{lang[0]} (#{lang[1]}),"

      %h2.group-title Boendeplatser
      %p= "Det finns #{@stats[:seats]} boendenplatser fördelade på #{@stats[:homes]} boenden"
      %p= "Det finns #{@stats[:guaranteed_seats]} garantiplatser och #{@stats[:movable_seats]} rörliga"
